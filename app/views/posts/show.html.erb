<p id="notice"><%= notice %></p>
  <h6>Written by <a href="#"><%= "#{@post.user.first_name} #{@post.user.last_name}" %></a> on August 12, 2012.</h6>
  <div class="row">
    <div class="large-2 columns small-3"><img src="http://placehold.it/80x80&text=[img]"/></div>
    <div class="large-10 columns">
      <p><strong><%= @post.title %>:</strong> <%= @post.content %></p>
      <ul class="inline-list">
        <% if session[:user_id] && session[:user_id] == post.user_id %>
          <li><a href=""><%= @post.user.email %></a></li>
          <li><%= link_to 'Edit', edit_post_path(@post) %></li>
          <li><%= link_to 'Back', posts_path %></li>
        <% end %>
      </ul>
      <div id="comments">
        <%= render partial: "/comments/comments", locals: { post: @post }%>
      </div>
      <% if session[:user_id] %>
        <%= form_for(@comment, remote: true) do |f| %>
          <%= f.hidden_field :post_id, :value => @post.id %>
          <%= f.text_area :body %>
          <%= f.submit%>
        <% end %>
      <% end %>
    </div>
  </div>
  <hr/>